.container-fluid
  .row
    .col-xs-12.col-sm-12.col-md-12.col-lg-12.mt20
      .panel.panel-default
        .panel-body
          = render 'admin/programs/tabs'

          = form_tag(admin_programs_path, method: :post, class: 'form-horizontal') do
            .col-md-6
              .form-group
                = label_tag 'name', "Program Name"
                = text_field('program', 'name',
                  autofocus: true, class: 'form-control', placeholder: 'Untitled')
              .form-group
                = label_tag 'cast', "Cast (Announcers and DJs)"
                = text_field('program', 'cast',
                  class: 'form-control')
              .form-group
                = select_tag "program[station_id]",
                  options_from_collection_for_select(Station.all,
                    "id", "name", params[:station_id])
              .form-group
                = text_field('program', 'start_date', class: 'bootstrap-datepicker form-control') #TODO rename
              .form-group
                = time_select 'program', 'start_time', minute_step: 15, ampm: true
                = time_select 'program', 'end_time', minute_step: 15, ampm: true
              .form-group
                = select_recurring 'program', 'recurrences',
                  [ IceCube::Rule.weekly.day(:monday, :tuesday, :wednesday, :thursday, :friday),
                  IceCube::Rule.weekly.day(:saturday, :sunday),
                  IceCube::Rule.weekly.day(:friday),
                  IceCube::Rule.weekly.day(:saturday),
                  IceCube::Rule.weekly.day(:sunday),
                  ], allow_blank: true
              .form-group
                = submit_tag 'save program'

