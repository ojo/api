%h1 Listing users

%table.table
  %thead
    %tr
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= link_to 'Show', [:admin, user]
        %td= link_to 'Edit', edit_admin_user_path(user)
        %td= button_to 'Destroy', [:admin, user], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New User', new_admin_user_path
