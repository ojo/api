= render 'admin/metrics/tabs'

- @stream_metric_names.each do |name|
  %h1
    = "Peak Times on #{name.upcase}"
  = month_calendar(partial: 'admin/metrics/calendar') do |date|

    - if date == Date.today # conditionally BOLD
      %b= date.day
    - else
      = date.day
    <br>

    - maybe_peak = Maybe.new(StreamMetric.peak(date, name: name))
    %h2
      = maybe_peak.created_at.strftime("%I:%M %p").__value__
    = maybe_peak.connection_count.__value__
