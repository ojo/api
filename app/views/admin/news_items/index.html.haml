
= link_to 'New News Item', new_admin_news_item_path

%h1 All News Items

%table.table
  %thead
    %tr
      %th Title
      %th Subtitle
      %th Body
      %th Photo
      %th
      %th
      %th

  %tbody
    - @news_items.each do |news_item|
      %tr
        %td= news_item.title
        %td= news_item.subtitle
        %td= news_item.body
        %td 
          - unless news_item.photo.nil?
            = image_tag news_item.photo.url(:thumb)
        %td= link_to 'Show', [:admin, news_item]
        %td= link_to 'Edit', edit_admin_news_item_path(news_item)
        %td= link_to 'Destroy', [:admin, news_item], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

